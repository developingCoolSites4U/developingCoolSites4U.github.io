const svgContent = iconMap[icon] || iconMap['Stethoscope'];
---

<div class="group bg-white rounded-2xl p-6 md:p-8 shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-1">
  <div class="w-14 h-14 rounded-xl bg-terracotta-50 flex items-center justify-center mb-5 group-hover:bg-terracotta-100 transition-colors">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="28"
      height="28"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#C2715B"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
    >
      <Fragment set:html={svgContent} />
    </svg>
  </div>

  <h3 class="font-serif text-xl font-bold text-charcoal mb-2">{title}</h3>
  <p class="text-charcoal-light text-sm leading-relaxed mb-4">{description}</p>

  <a
    href={href}
    class="inline-flex items-center gap-1 text-terracotta font-semibold text-sm hover:gap-2 transition-all duration-200"
  >
    Scopri di Pi√π
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path d="M5 12h14"/><path d="m12 5 7 7-7 7"/>
    </svg>
  </a>
</div>
