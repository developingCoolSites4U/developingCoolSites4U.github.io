---
const badges = [
  { icon: 'shield', label: 'Conforme alla Privacy' },
  { icon: 'check', label: 'Assicurazioni Accettate' },
  { icon: 'percent', label: 'Finanziamento a Tasso 0%' },
];
---

<div class="flex flex-wrap items-center justify-center gap-6 py-6">
  {badges.map((badge) => (
    <div class="flex items-center gap-2 text-charcoal/70 text-sm">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#8FA68A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M20 6 9 17l-5-5"/>
      </svg>
      <span>{badge.label}</span>
    </div>
  ))}
</div>
