---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import TeamMemberCard from '../components/TeamMemberCard.astro';
import CtaBanner from '../components/CtaBanner.astro';
import { SEO, DOCTOR, TEAM, VALUES, STUDIO_PHOTOS } from '../lib/constants';
---

<BaseLayout title={SEO.chiSiamo.title} description={SEO.chiSiamo.description}>

  <!-- Hero -->
  <HeroSection
    title="Conosci la Tua Famiglia Dentale"
    subtitle="ProfessionalitÃ , passione e un sorriso che ti accoglie ogni giorno."
    image="https://images.unsplash.com/photo-1629909615184-74f495363b67?w=1200&q=80"
  />

  <!-- Bio Dottoressa -->
  <section class="section-padding bg-cream fade-in">
    <div class="container-brand">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="rounded-2xl overflow-hidden shadow-lg">
          <img
            src={DOCTOR.photo}
            alt={`Foto di ${DOCTOR.name}`}
            class="w-full aspect-[3/4] object-cover"
            loading="eager"
          />
        </div>
        <div>
          <h2 class="font-serif text-3xl md:text-4xl font-bold text-charcoal mb-2">
            {DOCTOR.name}
          </h2>
          <p class="text-terracotta font-medium mb-1">{DOCTOR.title}</p>
          <p class="text-charcoal/50 text-sm mb-6">{DOCTOR.registration}</p>
          <div class="prose prose-charcoal max-w-none">
            {DOCTOR.bio.split('\n\n').map((paragraph) => (
              <p class="text-charcoal/80 leading-relaxed mb-4">{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="section-padding bg-white fade-in">
    <div class="container-brand">
      <div class="text-center mb-12">
        <h2 class="font-serif text-3xl md:text-4xl font-bold text-charcoal mb-4">
          Il Nostro Team
        </h2>
        <p class="text-charcoal-light max-w-2xl mx-auto">
          Professionisti dedicati al tuo benessere, pronti ad accoglierti con competenza e calore.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {TEAM.map((member) => (
          <TeamMemberCard
            name={member.name}
            role={member.role}
            photo={member.photo}
            bio={member.bio}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Foto Studio -->
  <section class="section-padding bg-cream fade-in">
    <div class="container-brand">
      <div class="text-center mb-12">
        <h2 class="font-serif text-3xl md:text-4xl font-bold text-charcoal mb-4">
          Il Nostro Studio
        </h2>
        <p class="text-charcoal-light max-w-2xl mx-auto">
          Un ambiente pensato per farti sentire a tuo agio fin dal primo istante.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {STUDIO_PHOTOS.map((photo) => (
          <div class="rounded-2xl overflow-hidden shadow-sm group">
            <div class="aspect-square overflow-hidden">
              <img
                src={photo.src}
                alt={photo.alt}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
            <p class="py-3 px-4 text-sm font-medium text-charcoal text-center bg-white">
              {photo.caption}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Valori -->
  <section class="section-padding bg-white fade-in">
    <div class="container-brand">
      <div class="text-center mb-12">
        <h2 class="font-serif text-3xl md:text-4xl font-bold text-charcoal mb-4">
          I Nostri Valori
        </h2>
        <p class="text-charcoal-light max-w-2xl mx-auto">
          Quattro pilastri che guidano ogni nostra scelta, ogni giorno.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {VALUES.map((value) => (
          <div class="bg-cream rounded-2xl p-6 text-center">
            <div class="w-14 h-14 rounded-full bg-sage/20 flex items-center justify-center mx-auto mb-4">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#8FA68A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
            </div>
            <h3 class="font-serif text-lg font-bold text-charcoal mb-2">{value.title}</h3>
            <p class="text-charcoal-light text-sm leading-relaxed">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <CtaBanner />

</BaseLayout>
