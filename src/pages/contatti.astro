---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import MapPlaceholder from '../components/MapPlaceholder.astro';
import TrustBadges from '../components/TrustBadges.astro';
import { SEO, CONTACT } from '../lib/constants';
---

<BaseLayout title={SEO.contatti.title} description={SEO.contatti.description}>

  <!-- Hero -->
  <HeroSection
    title="Contattaci â€” Ti Aspettiamo"
    subtitle="Chiamaci, scrivici o vieni a trovarci. Siamo a tua disposizione."
    image="https://images.unsplash.com/photo-1606811841689-23dfddce3e95?w=1200&q=80"
  />

  <!-- Info Contatto + Mappa -->
  <section class="section-padding bg-cream">
    <div class="container-brand">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">

        <!-- Info Contatto -->
        <div class="space-y-6 fade-in">

          <!-- Card Info -->
          <div class="bg-white rounded-2xl p-6 md:p-8 shadow-sm">
            <h2 class="font-serif text-2xl font-bold text-charcoal mb-6">Le Nostre Informazioni</h2>

            <div class="space-y-5 text-sm">
              <!-- Indirizzo -->
              <div class="flex items-start gap-3">
                <svg class="flex-shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C2715B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                <div>
                  <p class="font-medium text-charcoal">Indirizzo</p>
                  <a href={CONTACT.googleMapsLink} target="_blank" rel="noopener noreferrer" class="text-charcoal/70 hover:text-terracotta transition-colors">
                    {CONTACT.address.full}
                  </a>
                </div>
              </div>

              <!-- Telefono -->
              <div class="flex items-start gap-3">
                <svg class="flex-shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C2715B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                <div>
                  <p class="font-medium text-charcoal">Telefono</p>
                  <a href={`tel:${CONTACT.phoneRaw}`} class="text-charcoal/70 hover:text-terracotta transition-colors">
                    {CONTACT.phone}
                  </a>
                </div>
              </div>

              <!-- WhatsApp -->
              <div class="flex items-start gap-3">
                <svg class="flex-shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C2715B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
                <div>
                  <p class="font-medium text-charcoal">WhatsApp</p>
                  <a href={`https://wa.me/${CONTACT.whatsapp}`} target="_blank" rel="noopener noreferrer" class="text-charcoal/70 hover:text-terracotta transition-colors">
                    {CONTACT.whatsappDisplay}
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-3">
                <svg class="flex-shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C2715B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                <div>
                  <p class="font-medium text-charcoal">Email</p>
                  <a href={`mailto:${CONTACT.email}`} class="text-charcoal/70 hover:text-terracotta transition-colors">
                    {CONTACT.email}
                  </a>
                </div>
              </div>

              <!-- Orari -->
              <div class="flex items-start gap-3">
                <svg class="flex-shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C2715B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12,6 12,12 16,14"/></svg>
                <div>
                  <p class="font-medium text-charcoal mb-1">Orari</p>
                  <table class="text-charcoal/70 text-sm">
                    {CONTACT.hours.map((h) => (
                      <tr>
                        <td class="pr-3 py-0.5 font-medium text-charcoal/80">{h.days}</td>
                        <td class="py-0.5">{h.time}</td>
                      </tr>
                    ))}
                  </table>
                </div>
              </div>
            </div>
          </div>

          <!-- Urgenza -->
          <div class="bg-terracotta-50 border border-terracotta/20 rounded-2xl p-6 text-center">
            <p class="font-serif text-lg font-bold text-charcoal mb-2">Urgenza?</p>
            <p class="text-charcoal/70 text-sm mb-3">Per emergenze dentali, chiamaci subito:</p>
            <a
              href={`tel:${CONTACT.phoneRaw}`}
              class="inline-flex items-center gap-2 text-terracotta font-bold text-xl hover:underline"
            >
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              {CONTACT.phone}
            </a>
          </div>
        </div>

        <!-- Mappa -->
        <div class="fade-in">
          <MapPlaceholder />
        </div>
      </div>

      <!-- Trust Badges -->
      <div class="mt-12 fade-in">
        <TrustBadges />
      </div>
    </div>
  </section>

</BaseLayout>
