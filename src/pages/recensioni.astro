---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import CtaBanner from '../components/CtaBanner.astro';
import { SEO, TESTIMONIALS, CONTACT } from '../lib/constants';

const base = import.meta.env.BASE_URL ?? '/';
const basePath = base.endsWith('/') ? base.slice(0, -1) : base;
---

<BaseLayout title={SEO.recensioni.title} description={SEO.recensioni.description}>

  <!-- Hero -->
  <HeroSection
    title="Cosa Dicono i Nostri Pazienti"
    subtitle="Leggi le esperienze di chi si Ã¨ affidato a noi per il proprio sorriso."
    image="https://images.unsplash.com/photo-1606265752439-1f18756aa5fc?w=1200&q=80"
  />

  <!-- Google Rating Badge -->
  <section class="py-8 bg-white">
    <div class="container-brand">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-center">
        <div class="flex items-center gap-2">
          <!-- Google "G" -->
          <svg width="32" height="32" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <div>
            <div class="flex items-center gap-1">
              <span class="text-2xl font-bold text-charcoal">{CONTACT.googleRating}</span>
              <div class="flex" aria-label={`${CONTACT.googleRating} stelle su 5`}>
                {Array.from({ length: 5 }).map(() => (
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="#F59E0B" stroke="none" aria-hidden="true">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                ))}
              </div>
            </div>
            <p class="text-sm text-charcoal/60">
              Basato su <strong>{CONTACT.googleReviewCount}</strong> recensioni Google
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Griglia Recensioni -->
  <section class="section-padding bg-cream">
    <div class="container-brand">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {TESTIMONIALS.map((t) => (
          <div class="fade-in">
            <TestimonialCard
              text={t.text}
              author={t.author}
              rating={t.rating}
              serviceTag={t.serviceTag}
            />
          </div>
        ))}
      </div>

    </div>
  </section>

  <!-- CTA Banner -->
  <CtaBanner title="Vuoi Unirti ai Nostri Pazienti Soddisfatti?" />

</BaseLayout>
